<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include DataStore preferences directory -->
        <include domain="file" path="datastore/"/>
        
        <!-- Exclude update APK file from backup -->
        <exclude domain="file" path="update.apk"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Include DataStore preferences directory -->
        <include domain="file" path="datastore/"/>
        
        <!-- Exclude update APK file from transfer -->
        <exclude domain="file" path="update.apk"/>
    </device-transfer>
</data-extraction-rules>
